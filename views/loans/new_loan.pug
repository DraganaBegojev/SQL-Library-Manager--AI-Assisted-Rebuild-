extends ../layout

block content
  h1 New Loan
  if errors
    h2.error Oooops!
    ul.error
      each error in errors
        li= error.message

  form(method='post')
    p
      label(for='book_id') Book
      select(id='book_id', name='book_id')
        option(value='') -- Select a Book --
        each book in books
          option(value=book.id)= book.title
    p
      label(for='patron_id') Patron
      select(id='patron_id', name='patron_id')
        option(value='') -- Select a Patron --
        each patron in patrons
          option(value=patron.id)= patron.library_id + ' - ' + patron.first_name + ' ' + patron.last_name
    p
      input(type='submit', value='Create New Loan')
