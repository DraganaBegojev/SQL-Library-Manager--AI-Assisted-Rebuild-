extends ../layout

block content
  h1 Patrons
  .create-search-container
    a.button(href='/patrons/new') Create New Patron
    form(method='get')
      input(
        type='search',
        id='search',
        name='search',
        placeholder='Search...'
      )
      button.search-btn(type='submit') Search

  table
    thead
      tr
        th Name
        th Address
        th Email
        th Library ID
        th Zip
    tbody
      each patron in patrons
        tr
          td
            a(href=`/patrons/${patron.id}`)= `${patron.first_name} ${patron.last_name}`
          td= patron.address
          td= patron.email
          td= patron.library_id
          td= patron.zip_code
